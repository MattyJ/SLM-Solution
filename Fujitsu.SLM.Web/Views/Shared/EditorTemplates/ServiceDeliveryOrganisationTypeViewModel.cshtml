@using Fujitsu.SLM.Web.Resources
@model BaseServiceDeliveryOrganisationTypeViewModel

<div id="resolverTypeViewModelContainer">
    <fieldset class="form-popup-fieldset">
        <legend>Resolver Type</legend>
        <div class="layout-row">
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.ServiceDeliveryOrganisationTypeId)</label>
            </div>
            <div class="editor-field">
                @(Html.Kendo().DropDownListFor(x => x.ServiceDeliveryOrganisationTypeId)
                      .AutoBind(true)
                      .Filter(FilterType.Contains)
                      .DataTextField("ServiceDeliveryOrganisationTypeName")
                      .DataValueField("Id")
                      .DataSource(source => source.Read(read => read.Action("GetServiceDeliveryOrganisationTypes", "ReferenceData")))
                      .OptionLabel(WebResources.DefaultDropDownListText))
                <div class="kendo-validation">
                    @Html.ValidationMessageFor(x => x.ServiceDeliveryOrganisationTypeId)
                </div>
            </div>
        </div>
        <div class="layout-row">
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.ServiceDeliveryOrganisationName)</label>
            </div>
            <div class="editor-field">
                @(Html.EditorFor(x => x.ServiceDeliveryOrganisationName, "WideText"))
                <div class="kendo-validation">
                    @Html.ValidationMessageFor(model => model.ServiceDeliveryOrganisationName)
                </div>
            </div>
        </div>
        <div class="layout-row">
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.ServiceDeliveryOrganisationNotes)</label>
            </div>
            <div class="editor-field">
                @(Html.EditorFor(x => x.ServiceDeliveryOrganisationNotes, "MultiLineText"))
                <div class="kendo-validation">
                    @Html.ValidationMessageFor(model => model.ServiceDeliveryOrganisationNotes)
                </div>
            </div>
        </div>
    </fieldset>
</div>