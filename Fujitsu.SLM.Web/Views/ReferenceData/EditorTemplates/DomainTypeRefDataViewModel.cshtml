@model DomainTypeRefDataViewModel
@{
    var isAdministrator = @User.IsInRole(UserRoles.Administrator);
}
<div>
    <fieldset class="form-popup-fieldset">
        @Html.HiddenFor(x => x.Id)
        <legend>Domain Type</legend>
        <div class="layout-row">
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.DomainName)</label>
            </div>
            <div class="editor-field">
                @(Html.EditorFor(x => x.DomainName, "WindowWideText"))
                <div class="kendo-validation">
                    @Html.ValidationMessageFor(model => model.DomainName)
                </div>
            </div>
        </div>
        @if (isAdministrator)
        {
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.Visible)</label>
            </div>
            <div class="editor-field">
                @(Html.Kendo().CheckBox().Name("Visible"))
            </div>
        }
        <div class="layout-row">
            <div class="editor-label">
                <label>@Html.LabelFor(x => x.SortOrder)</label>
            </div>
            <div class="editor-field">
                @(Html.EditorFor(x => x.SortOrder, "SmallInteger"))
                <div class="kendo-validation">
                    @Html.ValidationMessageFor(model => model.SortOrder)
                </div>
            </div>
        </div>
    </fieldset>
</div>

@Html.Partial("_KendoValidation")